# Production Environment Configuration

# Application
APP_NAME=ExpenseFlow API
VERSION=1.0.0
DEBUG=False

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=change-this-super-secret-key-in-production-environment
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql://expenseflow:expenseflow_password@postgres:5432/expenseflow

# Redis
REDIS_URL=redis://redis:6379

# CORS Origins
BACKEND_CORS_ORIGINS=https://expenseflow.com,https://www.expenseflow.com,http://localhost:3000

# AWS S3 Configuration (Required for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=expenseflow-receipts-prod

# Email Configuration (Required for notifications)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=noreply@expenseflow.com
SMTP_PASSWORD=your-email-app-password

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.expenseflow.com